  <body>
    <div class="nav">
    <% if logged_in? %>
      <a href="/logout">Logout</a>
      
      <% end %>
      </div>
      
    <div class="wrapper">
      <% if flash[:message] %>
        <p style="color: green;"><%= flash[:message] %></p>
     <% end %>
     <% if flash[:error] %>
        <p style="color: red;"><%= flash[:error] %></p>
     <% end %>
        <%= yield %>
        <% if logged_in? %>
      
      <a href="/inspirational_quotes">See all quotes</a>
      <a href="/inspirational_quotes/new"> Write a Quote!</a>
      <% end %>
      <footer class="branding">
        <small>&copy; 2021 <strong>SinatraInspirationalQuoteApp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
